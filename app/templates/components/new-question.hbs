{{#if addNewQuestion}}
  <div class="container">
    <form>
      <h5>Create a new question</h5>
      <div class="form-group">
        <label for="content">Question:</label>
        {{input value=content id="content"}}
      </div>
      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="notes">Notes:</label>
        {{input value=notes id="notes"}}
      </div>
      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
