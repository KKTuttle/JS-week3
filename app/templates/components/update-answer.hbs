{{#if updateAnswerForm}}
  <h4>Update {{answer.answer}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="answerContent">Answer Content</label>
        {{input value=answerContent id ='answerContent' placeholder=answer.answerContent}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id ='author' placeholder=answer.author}}
      </div>
      <button {{action 'update' answer}}>Save</button>
    </form>
  </div>
{{else}}
  <button class='update-button' {{action 'updateAnswerForm'}}>Update</button>
{{/if}}
